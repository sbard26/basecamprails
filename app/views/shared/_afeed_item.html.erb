<li id="<%= afeed_item.id %>">
  <%= link_to gravatar_for(afeed_item.user), afeed_item.user %>
  <span class="user">
    <%= link_to afeed_item.user.name, afeed_item.user %>
  </span>
  <span class="teaser"><%= afeed_item.teaser %></span>

<!-- Modal -->  
<a href="#myModal" role="button" class="btn" data-toggle="modal">Full Article</a>
  <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <h3 id="myModalLabel"><%= afeed_item.title %></h3>
  </div>
  <div class="modal-header">
    <h3 id="myModalLabel"><%= afeed_item.author %></h3>
  </div>
  <div class="modal-body">
    <p><%= afeed_item.content %></p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Comment</button>
  </div>
</div>
<!-- End Modal -->

  <span class="timestamp">
    Posted <%= time_ago_in_words(afeed_item.created_at) %> ago.
  </span>
  <% if current_user?(afeed_item.user) %>
    <%= link_to "delete", afeed_item, method: :delete,
			 	     data: { confirm: "Are you sure?" },
				     title: afeed_item.teaser %>
  <% end %>
</li>